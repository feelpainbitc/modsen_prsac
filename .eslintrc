{
    "extends": ["react-app", "react-app/jest", "prettier"],
    "rules": {
        "no-console": "warn",
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "indent": ["warn", 4],
        "comma-dangle": ["error", "always-multiline"],
        "semi": ["off", "always"],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index",
                    "object",
                    "type"
                ],
                "newlines-between": "always-and-inside-groups"
            }
        ]
    }
}
